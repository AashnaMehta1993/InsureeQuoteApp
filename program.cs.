using System;
using System.Collections.Generic;

// Class representing an insuree
public class Insuree
{
    public string FirstName { get; set; }
    public string LastName { get; set; }
    public string EmailAddress { get; set; }
    public int Age { get; set; }
    public int CarYear { get; set; }
    public string CarMake { get; set; }
    public string CarModel { get; set; }
    public int SpeedingTickets { get; set; }
    public bool DUI { get; set; }
    public string CoverageType { get; set; }
    public decimal Quote { get; set; }

    // Method to calculate the quote
    public void CalculateQuote()
    {
        decimal quote = 50; // base

        // Age adjustment
        if (Age <= 18) quote += 100;
        else if (Age >= 19 && Age <= 25) quote += 50;
        else quote += 25;

        // Car year adjustment
        if (CarYear < 2000) quote += 25;
        if (CarYear > 2015) quote += 25;

        // Car make/model adjustment
        if (CarMake.ToLower() == "porsche")
        {
            quote += 25;
            if (CarModel.ToLower() == "911 carrera") quote += 25;
        }

        // Speeding tickets
        quote += SpeedingTickets * 10;

        // DUI
        if (DUI) quote *= 1.25m;

        // Coverage type
        if (CoverageType.ToLower() == "full") quote *= 1.5m;

        Quote = quote;
    }
}

public class Program
{
    public static void Main()
    {
        // Create list of insurees
        List<Insuree> insurees = new List<Insuree>();

        // Example: adding two insurees
        Insuree insuree1 = new Insuree
        {
            FirstName = "Alice",
            LastName = "Smith",
            EmailAddress = "alice@example.com",
            Age = 22,
            CarYear = 2018,
            CarMake = "Toyota",
            CarModel = "Camry",
            SpeedingTickets = 1,
            DUI = false,
            CoverageType = "Full"
        };
        insuree1.CalculateQuote();
        insurees.Add(insuree1);

        Insuree insuree2 = new Insuree
        {
            FirstName = "Bob",
            LastName = "Johnson",
            EmailAddress = "bob@example.com",
            Age = 17,
            CarYear = 1999,
            CarMake = "Porsche",
            CarModel = "911 Carrera",
            SpeedingTickets = 2,
            DUI = true,
            CoverageType = "Liability"
        };
        insuree2.CalculateQuote();
        insurees.Add(insuree2);

        // Admin "view" - show all insurees and quotes
        Console.WriteLine("All insuree quotes:");
        foreach (var i in insurees)
        {
            Console.WriteLine($"{i.FirstName} {i.LastName} ({i.EmailAddress}) - Quote: ${i.Quote}");
        }
    }
}
