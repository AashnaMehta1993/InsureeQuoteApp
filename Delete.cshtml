@model InsureeQuoteApp.Models.Insuree

<h2>Delete Insuree</h2>

<div>
    <p>Are you sure you want to delete this insuree?</p>

    <p><strong>First Name:</strong> @Model.FirstName</p>
    <p><strong>Last Name:</strong> @Model.LastName</p>
    <p><strong>Email:</strong> @Model.EmailAddress</p>
    <p><strong>Quote ($):</strong> @Model.Quote</p>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <button type="submit">Delete</button>
    <a href="@Url.Action("Index", "Insuree")">Cancel</a>
}
